<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav mr-auto">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>

      <!--
        check if username exists
        the username variable is passed from server object

        if username exists render the username else render the login form
      -->
      <% if(!username){ %>

        <form class="form-inline my-2 my-lg-0" method="post" action="auth/login">
            <input class="form-control mr-sm-2" name='username' type="text" placeholder="Username" aria-label="username" required>
            <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Login</button>
        </form>

      <% } else{ %>  

        <form class="form-inline my-2 my-lg-0" method="post" action="auth/logout">
          <span>Logged in as: <%= username %>! </span>
          <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Logout</button>
        </form>

      <% } %>

    </div>
  </nav>
</header>