<div class="card">
  <div class="card-header"></div>
  <div class="card-body">
    <div class="text-center">
      <h5 class="card-title">TinyURL for: <%= longURL %></h5>
      <p class="card-text">Short URL: <a target="_blank" href="/u/<%= shortURL %>"><%= shortURL %></a></p>
    </div>
    <hr />
    <h4>Edit</h4>
      <form class="form-inline" action="/urls/<%= shortURL%>?_method=PUT" method="POST">
        <div class="form-group mb-2">
          <label for="longURL">New URL:</label>
          <input class="form-control" type="text" name="longURL" value="<%= longURL %>" style="width: 300px; margin: 1em">
          <button type="submit" class="btn btn-info">Update</button>
        </div>
      </form>
  </div>
  <div class="card-footer text-muted">
  </div>
</div>