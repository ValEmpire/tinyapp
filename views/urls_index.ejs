<!-- insideLayout -->

<h3>My URLs</h3>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Short URL</th>
      <th scope="col">Long URL</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% for(let url in urls) { %>
        <tr>
          <td><%= url %></td>
          <td><%= urls[url] %></td>
          <td>
            <a class="btn btn-outline-primary" href="/urls/<%= url %>" role="button">Edit</a>
          </td>
          <td>
            <form method="POST" action="/urls/<%= url %>/delete">
                  <button type="submit" class="btn btn-outline-danger">Delete</button>
            </form>
          </td>
        </tr>
    <% } %>
  </tbody>
</table>

<!-- /insideLayout -->
